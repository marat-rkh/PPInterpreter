# rec.pp
# пример взаимной рекурсии
def foo(n):
if n >= 0:
return bar(n - 1)
end
end
def bar():
if n > 0:
return foo(n - 1)
end
end
print foo(10) # напечататет 0, foo и bar определены, а порядок не важен
# rec_error.pp
# пример взимной рекурсии с ошибкой
def foo(n):
4
if n > 0:
return bar(n - 1)
end
end
print foo(10) # напечататет 0, порядок определений функций и инструкций не важен
def bar():
if n > 0:
return foo(n - 1)
end
end

